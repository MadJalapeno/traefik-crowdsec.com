<article class="grid md:grid-cols-2 gap-12 items-start">
  {% if codePosition == 'left' %}
    <div class="order-2 md:order-1 bg-black rounded-lg p-6 border border-gray-800">
      <pre class="text-green-400 font-mono text-xs whitespace-pre-wrap" aria-label="{{ title }} code example"><code>{{ code }}</code></pre>
    </div>
    <div class="order-1 md:order-2">
      <h3 class="text-3xl font-bold mb-4 text-gray-100">{{ title }}</h3>
      <p class="text-gray-300 text-lg leading-relaxed">{{ description }}</p>
    </div>
  {% else %}
    <div>
      <h3 class="text-3xl font-bold mb-4 text-gray-100">{{ title }}</h3>
      <p class="text-gray-300 text-lg leading-relaxed">{{ description }}</p>
    </div>
    <div class="bg-black rounded-lg p-6 border border-gray-800">
      <pre class="text-green-400 font-mono text-xs whitespace-pre-wrap" aria-label="{{ title }} code example"><code>{{ code }}</code></pre>
    </div>
  {% endif %}
</article>